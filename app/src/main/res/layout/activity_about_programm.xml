<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
    >

        <TextView
                android:text="Фитнес трекер"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView2"
                android:textSize="36sp" android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
        />

        <TextView
                android:text="Инструкция:"
                android:layout_width="wrap_content"
                android:layout_height="46dp" android:id="@+id/textView3"
                android:textSize="25dp" android:textStyle="bold" android:layout_marginStart="16dp"
                android:layout_marginTop="30dp"
        />

        <TextView
                android:text="1. Ввести свой предельный максимум подтягиваний"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView4"
                android:textSize="20sp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"/>

        <TextView
                android:text="2. Если ваш предельный максимум меньше шести, найдите резину или сочетание резин, с которыми вы сделаете 6 подтягиваний"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView5"
                android:textSize="20sp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="30dp"/>
        <TextView
                android:text="3. Нажать кнопку Далее"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" android:id="@+id/textView7"
                android:textSize="20sp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="30dp"/>

        <TextView
                android:text="4. Появится таблица тренировок на 4 недели. (под = подходов)"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" android:id="@+id/textView6"
                android:textSize="20sp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="30dp"/>

        <TextView
                android:text="5. Негатив - Негативные подтягивания. Нужно опуститься из положения над перекладиной и перейти в вис. "
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="30dp"/>

    </LinearLayout>

</ScrollView>